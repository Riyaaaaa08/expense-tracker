@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-exchange-alt"></i> Transactions</h2>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Add Transaction</a>
</div>

<div class="card">
    <div class="card-header">
        <h5>Filter Transactions</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Type</label>
                <select name="type" class="form-select">
                    <option value="">All Types</option>
                    <option value="1" selected="@(Context.Request.Query["type"] == "1")">Income</option>
                    <option value="2" selected="@(Context.Request.Query["type"] == "2")">Expense</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="categoryId" asp-items="ViewBag.Categories" class="form-select">
                    <option value="">All Categories</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control" value="@Context.Request.Query["startDate"]" />
            </div>
            <div class="col-md-2">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control" value="@Context.Request.Query["endDate"]" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (item.Type == TransactionType.Income)
                            {
                                <span class="badge bg-success"><i class="fas fa-arrow-up"></i> Income</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="fas fa-arrow-down"></i> Expense</span>
                            }
                        </td>
                        <td>@item.Category?.Name</td>
                        <td>@item.Description</td>
                        <td class="@(item.Type == TransactionType.Income ? "text-success" : "text-danger") fw-bold">
                            â‚¹@item.Amount.ToString("N2")
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

