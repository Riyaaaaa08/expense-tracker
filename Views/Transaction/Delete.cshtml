@model Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2><i class="fas fa-trash"></i> Delete Transaction</h2>
<hr />

<h3>Are you sure you want to delete this transaction?</h3>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Date:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>
                    
                    <dt class="col-sm-4">Type:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Type == TransactionType.Income)
                        {
                            <span class="badge bg-success">Income</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Expense</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
                    
                    <dt class="col-sm-4">Amount:</dt>
                    <dd class="col-sm-8">â‚¹@Html.DisplayFor(model => model.Amount)</dd>
                    
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

