@model Category
@{
    ViewData["Title"] = "Delete Category";
}

<h2><i class="fas fa-trash"></i> Delete Category</h2>
<hr />

<h3>Are you sure you want to delete this category?</h3>
@if (ViewBag.HasTransactions == true)
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> This category is being used by transactions and cannot be deleted.
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Category Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                </dl>
            </div>
        </div>

        @if (ViewBag.HasTransactions != true)
        {
            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        }
        else
        {
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        }
    </div>
</div>

